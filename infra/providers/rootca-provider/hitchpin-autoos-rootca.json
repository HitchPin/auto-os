{
    "typeName": "HitchPin::AutoOs::RootCA",
    "description": "An example resource schema demonstrating some basic constructs and validation rules.",
    "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-rpdk.git",
    "definitions": {
        "RSAKeySize": {
            "$comment": "RSA key size.",
            "type": "integer",
            "enum": [
                1024,
                2048,
                4096
            ],
            "default": 2048
        },
        "DistinguishedNamePart": {
            "type": "string"
        }
    },
    "properties": {
        "KeySize": {
            "$ref": "#/definitions/RSAKeySize"
        },
        "Subject": {
            "description": "The subject of the CA.",
            "type": "object",
            "properties": {
                "CommonName": { "$ref": "#/definitions/DistinguishedNamePart" },
                "Organization": { "$ref": "#/definitions/DistinguishedNamePart" },
                "OrganizationalUnit": { "$ref": "#/definitions/DistinguishedNamePart" },
                "Country": { "$ref": "#/definitions/DistinguishedNamePart" },
                "State": { "$ref": "#/definitions/DistinguishedNamePart" },
                "City": { "$ref": "#/definitions/DistinguishedNamePart" }
            },
            "required": [
                "CommonName",
                "Organization",
                "Country",
                "City"
            ],
            "additionalProperties": false
        },
        "ExpirationDays": {
            "type": "number",
            "minimum": 1,
            "maximum": 3650,
            "default": 3650
        },
        "PrivateKeyKmsKeyId": {
            "type": "string"
        },
        "PrivateKeySecretName": {
            "type": "string"
        },

        "PublicCertificatePem": {
            "type": "string"
        },
        "Serial": {
            "type": "string"
        },
        "PrivateKeySecretArn": {
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "Subject",
        "PrivateKeyKmsKeyId",
        "PrivateKeySecretName"
    ],
    "readOnlyProperties": [
        "/properties/PublicCertificatePem",
        "/properties/Serial",
        "/properties/PrivateKeySecretArn"
    ],
    "primaryIdentifier": [
        "/properties/PublicCertificatePem",
        "/properties/Serial"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "secretsmanager:CreateSecret",
                "secretsmanager:ListSecrets",
                "kms:GenerateDataKey",
                "kms:Decrypt"
            ]
        },
        "read": {
            "permissions": [
                "secretsmanager:GetSecretValue",
                "secretsmanager:ListSecrets",
                "kms:GenerateDataKey",
                "kms:Decrypt"
            ]
        },
        "delete": {
            "permissions": [
                "secretsmanager:DeleteSecret"
            ]
        },
        "list": {
            "permissions": [
                "secretsmanager:ListSecrets",
                "kms:GenerateDataKey",
                "kms:Decrypt"
            ]
        }
    }
}

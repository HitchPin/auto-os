load(
    "@rules_dotnet//dotnet:defs.bzl",
    "csharp_binary",
)

SOURCES = glob(
    include = [
        "*.cs",
    ],
    allow_empty = False,
    exclude = [],
)

csharp_binary(
    name = "bin",
    srcs = SOURCES,
    out = "Summer.Cli",
    data = [
        "//maestro/admin-cli",
    ],
    target_frameworks = ["net8.0"],
    visibility = ["//visibility:public"],
    deps = [
        "//summer/Summer.Core:lib",
        "//summer/Summer.Environment:lib",
        "@paket.main//cliwrap",
        "@paket.main//microsoft.extensions.logging.abstractions",
        "@paket.main//pulumi",
        "@paket.main//pulumi.awsnative",
        "@paket.main//pulumi.command",
        "@paket.main//system.codedom",
        "@rules_dotnet//tools/runfiles",
    ],
)
